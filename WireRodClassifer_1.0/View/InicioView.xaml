<UserControl x:Class="WireRodClassifer_1._0.View.InicioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WireRodClassifer_1._0.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500"
             Margin="0,0,10,0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        
        <!--1st Row-->
        <Button Name="btnIniciar" Grid.Column="0" Grid.Row="0" Margin="10,15" FontSize="20"
                Click="BtnIniciar_Click">Iniciar</Button>
        <Button Name="btnParar" Grid.Column="1" Grid.Row="0" Margin="10,15" FontSize="20"
                Click="BtnParar_Click">Parar</Button>
        
    </Grid>
</UserControl>
